<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CreateCodeMapper">

	<resultMap id="BaseResultMap" type="com.tao.springboot.entity.CreateItem">
		<id column="column_name" property="columnName" jdbcType="VARCHAR" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="type" property="type" jdbcType="VARCHAR" />
		<result column="memo" property="memo" jdbcType="VARCHAR" />
		<result column="is_nullable" property="isNullable" jdbcType="BOOLEAN" />
	</resultMap>

	<sql id="columns">
		column_name,
		data_type,
		is_nullable,
		colum_comment
	</sql>



	<!-- 通过表名查找表字段 -->
	<select id="findColumn" parameterType="map" resultType="com.tao.springboot.entity.CreateItem">
		SELECT
		column_name columnName,
		data_type type,
		is_nullable isNullable,
		column_comment memo
		FROM Information_schema.columns
		WHERE table_schema = 'test' and table_Name = #{tableName}
	</select>

</mapper>